{
    "metadata": {
        "name": "BA-CVA Parameters",
        "regulation": "PRA Near-Final Rules (PS9/24, PS17/23)",
        "rulebook_part": "Credit Valuation Adjustment Risk Part",
        "jurisdiction": "United Kingdom",
        "implementation_date": "2026-01-01",
        "version": "1.0"
    },
    
    "supervisory_scalars": {
        "DS_BA_CVA": {
            "value": 0.65,
            "description": "Discount Scalar applied to final BA-CVA capital requirement"
        },
        "rho": {
            "value": 0.50,
            "description": "Supervisory correlation parameter for systematic/idiosyncratic split"
        },
        "beta": {
            "value": 0.25,
            "description": "Hedge recognition floor in Full BA-CVA (K_full = β × K_reduced + (1-β) × K_hedged)"
        },
        "supervisory_discount_rate": {
            "value": 0.05,
            "description": "Flat rate used in discount factor formula"
        },
        "index_hedge_scalar": {
            "value": 0.70,
            "description": "Multiplier applied to Table 1 risk weights for index hedges"
        },
        "maturity_floor": {
            "value": 1.0,
            "description": "1-year floor for uncollateralised netting sets"
        }
    },
    
    "alpha_values": {
        "standard": {
            "value": 1.4,
            "applicable_to": "All counterparties except pension funds"
        },
        "pension_fund": {
