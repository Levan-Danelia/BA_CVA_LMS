    "hedge_correlations": {
        "direct": {
            "r_hc": 1.00,
            "hmac_factor": 0.00,
            "description": "Hedge references counterparty directly"
        },
        "legally_related": {
            "r_hc": 0.80,
            "hmac_factor": 0.36,
            "description": "Hedge references parent/subsidiary of counterparty"
        },
        "sector_region": {
            "r_hc": 0.50,
            "hmac_factor": 0.75,
            "description": "Hedge references entity in same sector and region"
        }
    },
    
    "discount_factor_rules": {
        "imm_firms": {
            "df_value": 1.0,
            "condition": "Firm has PRA Article 283 permission for Internal Model Method"
        },
        "non_imm_firms": {
            "formula": "(1 - exp(-0.05 * M_NS)) / (0.05 * M_NS)",
            "supervisory_rate": 0.05
        }
    },
    
    "maturity_rules": {
        "note": "M_NS is an INPUT to BA-CVA, derived from other regulatory frameworks",
        "imm_firms": {
            "source": "IMM model output per CRR Article 162(2)(g)"
        },
        "non_imm_firms": {
            "source": "Notional-weighted average per CRR Article 162(2)(b)",
            "formula": "M_NS = Σ(Notional_i × M_i) / Σ(Notional_i)",
            "floor": "1-year for uncollateralised",
            "cap": "Longest contractual remaining maturity (no 5-year cap)"
        }
    },
    
    "eligible_hedges": {
        "single_name": {
            "instrument_types": [
                "Single-name CDS",
                "Single-name contingent CDS"
            ],
            "reference_requirements": {
                "direct": "References counterparty c directly",
                "legally_related": "References parent/subsidiary of counterparty c",
                "sector_region": "References entity in same sector AND region as counterparty c"
            }
        },
        "index": {
            "instrument_types": [
                "Index CDS (e.g., iTraxx, CDX)"
            ],
            "risk_weight_rules": {
                "homogeneous": "Table 1 RW × 0.70 (all constituents same sector and credit quality)",
                "heterogeneous": "Name-weighted average of Table 1 RWs × 0.70"
            },
            "portfolio_connection": "NONE - index composition based on actual index, NOT portfolio",
            "purpose": "Offsets SYSTEMATIC CVA risk (market-wide credit spread movements)",
            "note": "IH reduces only the systematic component in K_hedged formula"
        }
    },
    
    "formulas": {
        "scva_c": {
            "formula": "(1/alpha) * RW_c * sum(M_NS * EAD_NS * DF_NS)",
            "description": "Standalone CVA for counterparty c"
        },
        "df_ns": {
            "imm": "1.0",
            "non_imm": "(1 - exp(-0.05 * M_NS)) / (0.05 * M_NS)",
            "description": "Supervisory discount factor"
        },
        "k_reduced": {
            "formula": "sqrt((rho * sum(SCVA_c))^2 + (1 - rho^2) * sum(SCVA_c^2))",
            "description": "Reduced BA-CVA aggregation"
        },
        "k_full": {
            "formula": "beta * K_reduced + (1 - beta) * K_hedged",
            "description": "Full BA-CVA with hedging"
        },
        "k_hedged": {
            "formula": "sqrt((rho * sum(SCVA_c - SNH_c) - IH)^2 + (1 - rho^2) * sum(SCVA_c - SNH_c)^2 + sum(HMAC_c))",
            "description": "Hedged capital component"
        },
        "snh_c": {
            "formula": "sum(r_hc * RW_h * M_h_SN * B_h_SN * DF_h_SN)",
            "description": "Single-name hedge benefit for counterparty c"
        },
        "ih": {
            "formula": "sum(RW_i_ind * M_i_ind * B_i_ind * DF_i_ind)",
            "description": "Index hedge benefit"
        },
        "hmac_c": {
            "formula": "sum((1 - r_hc^2) * (RW_h * M_h_SN * B_h_SN * DF_h_SN)^2)",
            "description": "Hedge mismatch adjustment"
        },
        "final_capital_reduced": {
            "formula": "DS_BA_CVA * K_reduced",
            "simplified": "0.65 * K_reduced"
        },
        "final_capital_full": {
            "formula": "DS_BA_CVA * K_full",
            "simplified": "0.65 * (0.25 * K_reduced + 0.75 * K_hedged)"
        }
    },
    
    "special_treatments": {
        "pension_funds": {
            "alpha_adjustment": "Use alpha = 1.0 instead of 1.4",
            "sector_code": "PEN",
            "transitional": "Legacy trades benefit from 2026-2029 phase-in"
        },
        "unrated_central_banks": {
